@using SistemaGestionAlquilerVehiculos.Entities
@model SistemaGestionAlquilerVehiculos.Models.AlquilarVehiculoViewModel

@{
    ViewData["Title"] = "Devolver Vehículo";
}

<h1>Devolver Vehículo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Devolver">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vehiculo" class="control-label"></label>
                <select asp-for="Vehiculo" class="form-control">
                    @foreach (Alquiler alquiler in ViewBag.Alquileres)
                    {
                        <option value="@alquiler.Vehiculo.Id">@alquiler.Vehiculo.Marca - @alquiler.Vehiculo.Modelo - @alquiler.Vehiculo.Year - @alquiler.Vehiculo.Color</option>
                    }
                </select>
                <span asp-validation-for="Vehiculo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Devolver" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listado de Alquileres</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
